    <script>
        // Attendre que le document soit compl√®tement charg√©
        $(document).ready(function() {
            const jobs = [
                { job: "CEO", name: "CEO (Directeur G√©n√©ral)", definition: "Il d√©finit la strat√©gie globale de l'entreprise, prend les d√©cisions majeures et supervise l'ensemble des op√©rations." },
