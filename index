                { job: "CPO", name: "CPO (Directeur Produit)", definition: "Il s'occupe du d√©veloppement et de l'am√©lioration des produits de l'entreprise en fonction des besoins du march√© et des utilisateurs." },
                { job: "Assistant administratif", name: "Assistant administratif", definition: "Il g√®re les t√¢ches administratives courantes comme la gestion des documents, la planification des r√©unions et le suivi des courriers." },
                { job: "Responsable juridique", name: "Responsable juridique", definition: "Il veille √† la conformit√© de l'entreprise avec la l√©gislation en vigueur et g√®re les litiges juridiques." },
                { job: "Charg√© des ressources humaines", name: "Charg√© des ressources humaines", definition: "Il s'occupe du recrutement, de la gestion des employ√©s et de leur d√©veloppement professionnel." },
                { job: "Responsable financier", name: "Responsable financier", definition: "Il g√®re les finances de l'entreprise, √©tablit les budgets et analyse les performances financi√®res." },
                { job: "Data Analyste", name: "Data Analyste", definition: "Il collecte, analyse et interpr√®te les donn√©es afin d'aider √† la prise de d√©cision strat√©gique." },
                { job: "Responsable de projet", name: "Responsable de projet", definition: "Il coordonne et supervise la mise en ≈ìuvre des projets en respectant les d√©lais et les budgets." },
                { job: "Designer UX/UI", name: "Designer UX/UI", definition: "Il con√ßoit des interfaces utilisateur ergonomiques et attrayantes pour am√©liorer l'exp√©rience utilisateur." },
                { job: "D√©veloppeur IA", name: "D√©veloppeur IA", definition: "Il d√©veloppe des solutions bas√©es sur l'intelligence artificielle, comme des algorithmes de machine learning." },
                { job: "Data Scientist", name: "Data Scientist", definition: "Il analyse des donn√©es complexes pour en extraire des informations utiles et construire des mod√®les pr√©dictifs." },
                { job: "Ing√©nieur logiciel", name: "Ing√©nieur logiciel", definition: "Il con√ßoit, d√©veloppe et teste des logiciels en s'assurant de leur bon fonctionnement." },
                { job: "Charg√© de communication", name: "Charg√© de communication", definition: "Il √©labore des strat√©gies de communication interne et externe pour promouvoir l'image de l'entreprise." },
                { job: "Community Manager", name: "Community Manager", definition: "Il anime et mod√®re les r√©seaux sociaux pour engager la communaut√© et am√©liorer la visibilit√© de l'entreprise." },
