            ];

            // Initialiser le jeu
            initGame();

            function initGame() {
                // Vider les colonnes
                $("#jobs").html('<h3>M√©tiers</h3>');
                $("#definitions").html('<h3>D√©finitions</h3>');
                $("#result").text("");

                // M√©langer les m√©tiers
                let shuffledJobs = [...jobs].sort(() => Math.random() - 0.5);
                
                // Cr√©er les m√©tiers √† droite avec leurs zones de d√©p√¥t
                shuffledJobs.forEach(job => {
                    $("#jobs").append(`
                        <div class='job-container'>
                            <div class='job-title' data-job='${job.job}'>${job.name}</div>
                            <div class='drop-zone' data-job='${job.job}'></div>
                        </div>
                    `);
                });

                // M√©langer √† nouveau pour l'ordre des d√©finitions
                shuffledJobs = [...jobs].sort(() => Math.random() - 0.5);
                
                // Cr√©er les d√©finitions √† gauche
                shuffledJobs.forEach(job => {
                    $("#definitions").append(`
                        <div class='definition' data-job='${job.job}'>
                            ${job.definition}
                        </div>
                    `);
                });

                // Rendre les d√©finitions draggables
                $(".definition").draggable({ 
                    revert: "invalid",
                    helper: "clone",
                    cursor: "move",
                    start: function() {
                        $(this).css("opacity", "0.5");
                    },
                    stop: function() {
                        $(this).css("opacity", "1");
                    }
                });

                // Rendre les zones sous les m√©tiers droppables
                $(".drop-zone").droppable({
                    accept: ".definition",
                    hoverClass: "highlight",
                    drop: function(event, ui) {
                        // Si cette zone contient d√©j√† une d√©finition, la remettre dans la colonne des d√©finitions
                        if ($(this).children().length > 0) {
                            let existingDef = $(this).children().first().detach();
                            $("#definitions").append(existingDef);
                            existingDef.css({position: "static"});
                        }
                        
                        // Ajouter la nouvelle d√©finition √† cette zone
                        let defClone = $(ui.draggable).detach();
                        $(this).append(defClone);
                        defClone.css({
                            position: "relative",
                            left: "0",
                            top: "0",
                            width: "auto",
                            margin: "0",
                            cursor: "default"
                        });
                    }
                });
            }

            // Validation des r√©ponses
            $("#validate").click(function() {
                let correct = 0;
                $(".drop-zone").each(function() {
                    let jobId = $(this).attr("data-job");
                    let droppedDef = $(this).children().first();
                    
                    // R√©initialiser les classes
                    $(this).removeClass("correct incorrect");
                    
                    if (droppedDef.length > 0) {
                        let defJob = droppedDef.attr("data-job");
                        
                        if (jobId === defJob) {
                            correct++;
                            $(this).addClass("correct");
                        } else {
                            $(this).addClass("incorrect");
                        }
                    }
                });
                
                // Afficher le score
                $("#result").html(`Score: <strong>${correct}/${jobs.length}</strong>`);
                
                if (correct === jobs.length) {
                    $("#result").append("<br>üéâ F√©licitations! Toutes les r√©ponses sont correctes! üéâ");
                }
            });

            // R√©initialiser le jeu
            $("#reset").click(function() {
                initGame();
            });
        });
    </script>
